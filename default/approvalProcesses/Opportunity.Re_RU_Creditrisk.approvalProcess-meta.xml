<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>INN_Opp__c</field>
        <field>Account</field>
        <field>Owner</field>
        <field>Name</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>CloseDate</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Creditrisk_Notification_Approve</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Creditrisk_Stage_Approve</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>To_reset_Lost_reason</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>olga.tonkonogova@transitcard.ru</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Re_RU_Creditrisk</label>
        <name>Re_RU_Creditrisk</name>
        <rejectionActions>
            <action>
                <name>Creditrisk_Notification_Reject</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Creditrisk_Reject_Reason</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Creditrisk_Stage_Reject</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>E2E_RU/Approval_OYR_v2</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(RecordType.DeveloperName = &#39;Russian_Sales&#39;,
TEXT(StageName) = &#39;Отказ&#39;,
TEXT(PPR_Lost_Reasons__c) = &#39;Refusal from PPR&#39;)</formula>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Check_Credit_History</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Re_RU_Creditrisk</label>
    <postTemplate>For_Approve_OYR</postTemplate>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
