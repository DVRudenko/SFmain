<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>INN_Opp__c</field>
        <field>Account</field>
        <field>Owner</field>
        <field>Name</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Approve_Stage</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CloseDate</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Notification_of_approval_service</name>
                <type>Alert</type>
            </action>
            <action>
                <name>To_reset_Lost_reason</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>darja.manova@pprcard.ru</name>
                <type>user</type>
            </approver>
            <approver>
                <name>pavel.beltyukov@transitcard.ru</name>
                <type>user</type>
            </approver>
            <approver>
                <name>varvara.utenkova@transitcard.ru.eu</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Re_Approval_Service</label>
        <name>Re_Approval_Service</name>
        <rejectionActions>
            <action>
                <name>Creditrisk_Stage_Reject</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Notification_of_reject_service</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Service_Reject_Reason</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>repeat request if rejected</description>
    <emailTemplate>E2E_RU/On_Approval_Service</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(RecordType.DeveloperName = &#39;Russian_Sales&#39;,
TEXT(StageName) = &#39;Отказ&#39;,
TEXT(PPR_Lost_Reasons__c) = &#39;Existing Customer&#39;)</formula>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Waiting_for_approval_Service</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Re_Approval_Service</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
